{
  "openapi": "3.0.0",
  "info": {
    "title": "ROUTE-SERVICE [BUSSEWAYA.ONLINE]",
    "version": "1.0.0",
    "description": "Apis for route service in the bussewaya system"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Development Server"
    },
    {
      "url": "https://api.routeservice.bussewaya.online",
      "description": "Production Server"
    }
  ],
  "paths": {
    "/route-service/routes": {
      "get": {
        "summary": "Get all routes",
        "tags": ["Route"],  
        "responses": {
          "200": {
            "description": "A list of routes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Route"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new route",
        "tags": ["Route"],  
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RouteInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Route created",  
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Route"
                }
              }
            }
          }
        }
      }
    },
    "/route-service/routes/{routeNumber}": {
      "get": {
        "summary": "Get a route by route number",
        "tags": ["Route"],  
        "parameters": [
          {
            "name": "routeNumber",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The route number of the route to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Route found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Route"
                }
              }
            }
          },
          "404": {
            "description": "Route not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a route by route number",
        "tags": ["Route"], 
        "parameters": [
          {
            "name": "routeNumber",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The route number of the route to delete"
          }
        ],
        "responses": {
          "204": {
            "description": "Route deleted successfully"
          },
          "404": {
            "description": "Route not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Route": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "MongoDB ObjectId"
          },
          "routeId": {
            "type": "number",
            "description": "Unique route identifier"
          },
          "routeNumber": {
            "type": "string",
            "description": "Route number"
          },
          "routeName": {
            "type": "string",
            "description": "Name of the route"
          },
          "startLocation": {
            "type": "string",
            "description": "Starting point of the route"
          },
          "endLocation": {
            "type": "string",
            "description": "Ending point of the route"
          },
          "travelDistance": {
            "type": "string",
            "description": "Distance of the route"
          },
          "travelDuration": {
            "type": "string",
            "description": "Duration to travel the route"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        }
      },
      "RouteInput": {
        "type": "object",
        "properties": {
          "routeId": {
            "type": "number"
          },
          "routeNumber": {
            "type": "string"
          },
          "routeName": {
            "type": "string"
          },
          "startLocation": {
            "type": "string"
          },
          "endLocation": {
            "type": "string"
          },
          "travelDistance": {
            "type": "string"
          },
          "travelDuration": {
            "type": "string"
          }
        },
        "required": [
          "routeId",
          "routeNumber",
          "routeName",
          "startLocation",
          "endLocation",
          "travelDistance",
          "travelDuration"
        ]
      }
    }
  }
}
